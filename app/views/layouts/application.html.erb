<!DOCTYPE html>
<html>
<head>
  <title>Tumblr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
		<ul>
			
			<li><%= link_to "Login", login_path %></li>
			<li><%= link_to "Thoughts", posts_path %></li>
			<li><%= link_to "Write it Out", new_post_path %></li>
			<li><%= link_to "The Crew", users_path %></li>
			<li><%= link_to "Logging Off", logout_path, method: :delete %></li>
			<li><%= link_to "Join The Movement", new_user_path %></li>
		</ul>
		</nav>
	
<% if flash[:notice]%>
<p><%=flash[:notice]%></p>
<%end%>

<% if flash[:alert]%>
<p><%=flash[:alert]%></p>
<%end%>
<%= yield %>

</body>
</html>
